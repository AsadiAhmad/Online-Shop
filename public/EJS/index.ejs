          <p id="logo-txt" class="logo">Online Shop</p>
        </a>
      </div>
      <div class="button-container">
        <div class="inner-btn-container">
          <a href="/Login/SignUp">
            <button id="signup-button" class="up-button signup-button"> Sign up </button>
          </a>
          <a href="/Login">
            <button id="login-button" class="down-button login-button"> Log in </button>
          </a>
        </div>
        <div class="inner-btn-container">
          <a href="/Product">
            <button id="add-product-btn" class="up-button add-product-button" style="display: none;"> Add Product </button>
          </a>
          <a href="">
            <button id="logout-button" class="down-button logout-button" onclick="logout()" style="display: none;"> Log Out </button>
          </a>
        </div>
      </div>
      <ul class="menu-items">
        <li class="home-li"><a href="/Home">Home</a></li>
        <div class="dropdown">
          <li><a class="dropbtn"> Pruducts </a></li>
          <div class="dropdown-content">
            <a href="#laptop"> Laptops </a>
            <a href="#phone"> Phones </a>
            <a href="#electronic"> Electronics </a>
            <a href="#handbag"> HandBag </a>
            <a href="#shoes"> Shoes </a>
            <a href="#snack"> Snacks </a>
          </div>
        </div>
      </ul>
    </div>
  </nav>
  <header class="header">
    <div class="slideshow-container">
      <a href="#handbag">
        <div class="mySlides fade">
          <img class="slide-img wearing" src="./../Image/Header/Wearing.jpg" style="width:100%">
        </div>
      </a>
      <a href="#electronic">
        <div class="mySlides fade">
          <img class="slide-img electronics" src="./../Image/Header/Electronics.jpg" style="width:100%">
        </div>
      </a>
      <a href="#snack">
        <div class="mySlides fade">
          <img class="slide-img snack" src="./../Image/Header/Snack.jpg" style="width:100%">
        </div>
      </a>
    </div>
    <br>
    <div style="text-align:center">
      <span class="dot"></span> 
      <span class="dot"></span> 
      <span class="dot"></span> 
    </div>
  </header>
  <section id="laptop" class="product first-section">
    <div class="outter-container green">
      <div class="product-container">
        <div class="part" style="background-color: transparent;">
          <div class="part-container">
            <div class="up">
              <img class="product-img" src="./../Image/Title/Laptop.png" alt="">
            </div>
            <div class="down">
              <p class="product-name" style="margin: auto;">Laptops</p>
            </div>
          </div>
        </div>
        <% var products;
        products.forEach(product => { %>
          <% if (product.productType === 'laptops') { %>
            <a href="/Product/Page/<%= product._id %>">
              <div class="part">
                <div class="part-container">
                  <div class="up">
                    <% if (product.picture) { %>
                      <img class="product-img" src="data:image/png;base64,<%= product.picture.toString('base64') %>" alt="<%= product.productName %>">
                    <% } else { %>
                      <img class="product-img" src="./../Image/Error/loadError.png" alt="Default Image">
                    <% } %>
                  </div>
                  <div class="down">
                    <p class="product-name inheritable-link"><%= product.productName %></p>
                    <p class="price inheritable-link"><%= product.productPrice %>$</p>
                  </div>
                </div>
              </div>
            </a>
          <% } %>
        <% }) %>
      </div>
    </div>
  </section>
