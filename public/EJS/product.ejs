<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Page</title>
    <style>
        .product-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            margin: 20px;
        }
        .product-img {
            width: 300px;
            height: auto;
        }
        .product-details {
            text-align: center;
            margin-top: 20px;
        }
        .comment-section {
            width: 80%;
            margin: 20px auto;
        }
        .comment-form {
            display: flex;
            flex-direction: column;
            align-items: center;
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="product-container">
        <% if (product.picture) { %>
            <img class="product-img" src="data:image/png;base64,<%= product.picture.toString('base64') %>" alt="<%= product.name %>">
        <% } else { %>
            <img class="product-img" src="./../Image/Error/loadError.png" alt="Default Image">
        <% } %>
        <div class="product-details">
            <h2><%= product.name %></h2>
            <p>Price: <%= product.price %></p>
            <p>Rating: <%= product.rating %></p>
            <p>Creator: <%= product.creator %></p>
        </div>
        <div class="comment-section">
            <h3>Comments</h3>
            <% product.comments.forEach(function(comment) { %>
                <div>
                    <p><strong><%= comment.user %></strong>: <%= comment.text %></p>
                </div>
            <% }); %>
        </div>
        <div class="comment-form">
            <h3>Leave a Comment</h3>
            <form action="/submit-comment" method="post">
                <input type="hidden" name="productId" value="<%= product._id %>">
                <textarea name="comment" placeholder="Your comment here..." required></textarea>
                <input type="number" name="rating" placeholder="Rate this product (1-5)" min="1" max="5" required>
                <button type="submit">Submit</button>
            </form>
        </div>
    </div>
</body>
</html>
